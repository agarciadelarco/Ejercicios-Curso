<h1>Concerts</h1>
<% @concerts.each do |concert|%>
<div><%= link_to concert.band, concert_path(concert)%> <%= concert.date %>
<%= link_to 'Destroy', concert_path(concert), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_concert_path(concert) %></div>
<% end %>

<p>
    <%= link_to 'New gig', new_concert_path %>
</p>